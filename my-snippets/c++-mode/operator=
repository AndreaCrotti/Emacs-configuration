# -*- mode: snippet -*-
# name: operator=
# key: =
# where this is a reference to myself
# --
${1:MyClass} & $1::operator=(const $1 &rhs) {
    // Check for self-assignment!
    if (this == &rhs)      // Same object?
      return *this;        // Yes, so skip assignment, and just return *this.
    $0
    return *this;
}